<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_Reset"
        style="@style/OperationButtons"
        android:layout_width="106dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="Reset"
        android:onClick="buttonReset"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/textView_current"
        app:layout_constraintTop_toTopOf="@+id/textView_current" />

    <Button
        android:id="@+id/button_Division"
        style="@style/OperationButtons"
        android:layout_width="81dp"
        android:layout_height="86dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="รท"
        android:onClick="buttonDivide"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toEndOf="@+id/button_Solve"
        app:layout_constraintTop_toBottomOf="@+id/button_Multiplication" />

    <Button
        android:id="@+id/button_Subtraction"
        style="@style/OperationButtons"
        android:layout_width="81dp"
        android:layout_height="86dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="-"
        android:onClick="buttonSubtract"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/button_Addition" />

    <Button
        android:id="@+id/button_Multiplication"
        style="@style/OperationButtons"
        android:layout_width="81dp"
        android:layout_height="86dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="x"
        android:onClick="buttonMultiply"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/button_Subtraction" />

    <Button
        android:id="@+id/button0"
        android:layout_width="81dp"
        android:layout_height="86dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="0"
        android:onClick="button0"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        app:strokeColor="#000000"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="81dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="2"
        android:onClick="button2"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/textView_current"
        app:strokeColor="#000000"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="81dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="8"
        android:onClick="button8"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:strokeColor="#000000"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="81dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="3"
        android:onClick="button3"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/textView_current"
        app:strokeColor="#000000"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="81dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="9"
        android:textSize="30sp"
        android:onClick="button9"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        app:strokeColor="#000000"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="81dp"
        android:layout_height="86dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="7"
        android:onClick="button7"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:strokeColor="#000000"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="81dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="5"
        android:onClick="button5"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:strokeColor="#000000"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="81dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="6"
        android:onClick="button6"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:strokeColor="#000000"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="81dp"
        android:layout_height="86dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:text="4"
        android:onClick="button4"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:strokeColor="#000000"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="81dp"
        android:layout_height="86dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:onClick="button1"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_current"
        app:strokeColor="#000000"
        app:strokeWidth="3dp" />

    <TextView
        android:id="@+id/textView_current"
        android:layout_width="388dp"
        android:layout_height="118dp"
        android:layout_marginTop="16dp"
        android:background="@color/md_theme_dark_onSurface"
        android:gravity="left|center_vertical"
        android:text=""
        android:textSize="40sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_History"
        android:layout_width="388dp"
        android:layout_height="118dp"
        android:layout_marginTop="32dp"
        android:background="@color/md_theme_dark_onSurface"
        android:gravity="start"

        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="History"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Solve"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_Addition"
        style="@style/OperationButtons"
        android:layout_width="81dp"
        android:layout_height="86dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:text="+"
        android:onClick="buttonAdd"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Solve"
        android:layout_width="178dp"
        android:layout_height="83dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Solve!"
        android:onClick="buttonSolve"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        app:strokeColor="#000000"
        app:strokeWidth="3dp" />

    <TextView
        android:id="@+id/textView_HistoryMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        app:layout_constraintEnd_toEndOf="@+id/textView_History"
        app:layout_constraintTop_toTopOf="@+id/textView_History" />
</androidx.constraintlayout.widget.ConstraintLayout>